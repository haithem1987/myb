{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    // logical root is the monorepo root
    "rootDir": "../../",
    // merge these folders under that same root
    "rootDirs": [
      "libs/invoice-module/src",
      "libs/doc-management-module/src",
      "libs/shared/infra",
      "libs/time-sheet-module/src"
    ],
    "outDir": "../../dist/out-tsc/libs/invoice-module",
    "declaration": true,
    "declarationMap": true,
    "inlineSources": true,
    "types": []
  },
  "exclude": [
    "src/**/*.spec.ts",
    "jest.config.ts",
    "src/**/*.test.ts"
  ],
  "include": [
    "src/**/*.ts"
  ]
}
